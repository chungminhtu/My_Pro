
@using System.Globalization
@using MMHDemo.Web.Areas.App.Models.Common.Modals
@using MMHDemo.Web.Areas.App.Models.Emp1s
@model CreateOrEditEmp1ModalViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditEmp1")) : L("CreateNewEmp1")))

<div class="modal-body">
        <div id="Emp1InformationsTab">
            <form name="Emp1InformationsForm" role="form" novalidate class="form-validation">

                @if (Model.IsEditMode)
                {
                    <input type="hidden" name="id" value="@Model.Emp1.Id" />
                }

				

				
								<div class="form-group">
									<label for="Emp1_Name">@L("Name")</label>
									<input class="form-control" id="Emp1_Name" value="@Model.Emp1.Name" type="text" name="name"     />
								</div>
					
								<div class="form-group">
									<label for="Emp1_Roll">@L("Roll")</label>
									<input class="form-control" id="Emp1_Roll" value="@Model.Emp1.Roll" type="text" name="roll"     />
								</div>
					
								<div class="form-group">
									<label for="Emp1_Email">@L("Email")</label>
									<input class="form-control" id="Emp1_Email" value="@Model.Emp1.Email" type="text" name="email"     />
								</div>
					

            </form>
        </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
